---
import H3 from "../atom/H3.astro"
import ParagraphGaramond from "../atom/ParagraphGaramond.astro"
import Button from "../Button.astro";

const {

    address_1,
    address_2,
    button_link,
    cover,
    link,
    location,
    phone_number,
    phone,

} = Astro.props
---

<div class="flex items-center flex-col gap-8">
    <a href={ link }>
        <img
            src={ cover }
            class="w-56 h-56 object-fit"
        />
    </a>
    <a class="hover:underline" href={ link }>
        <H3
            text={ location }
        />
    </a>
    <div class="text-center">
        <ParagraphGaramond
            text={ address_1 }
        />
        <ParagraphGaramond
            text={ address_2 }
        />
        <a class="hover:underline" href={ phone_number }>
            <ParagraphGaramond
                text={ phone }
            />
        </a>
    </div>
    <div class="w-2/3 flex justify-center">
        <Button
            text="DIRECTIONS"
            link= { button_link }
            target={ "_blank" }
            external={ true }
        />
    </div>
</div>
