---
const {

    link,
    selected,
    target,
    text,

} = Astro.props
---
<a href={ "/" + link } target={ target }>
    <button class={`${selected?"bg-transparent text-black":"bg-black text-white"} font-semibold text-base border-2 border-black w-fit px-8 hover:bg-transparent hover:text-black duration-200 flex justify-center items-center h-14 font-karla tracking-widest uppercase`}>{ text }</button>
</a>
