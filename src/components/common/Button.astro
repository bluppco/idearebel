---
const {

    link,
    selected,
    target,
    text,

} = Astro.props
---
<a href={ "/" + link } target={ target }>
    <button class={`${selected?"bg-transparent text-black":"bg-black text-white"} font-semibold text-base border-2 border-black py-3 w-fit px-4 hover:bg-transparent hover:text-black duration-200 px-5 font-karla tracking-widest uppercase`}>{ text }</button>
</a>
