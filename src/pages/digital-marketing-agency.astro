---
import H1 from "../components/common/atom/H1.astro"
import H2 from "../components/common/atom/H2.astro"
import H3 from "../components/common/atom/H3.astro"
import H5 from "../components/common/atom/H5.astro"
import Button from "../components/common/Button.astro"
import Paragraph from "../components/common/Paragraph.astro"
import Footer from "../components/Footer.astro"
import Header from "../components/common/Header.jsx"
import Head from "../components/common/Head.astro"
---

<html lang="en">
	<Head 
        title="Digital Marketing Agency in Toronto, Vancouver, Los Angeles | Idea Rebel"
		description="Idea Rebel is a digital marketing agency in Vancouver, Toronto, and Los Angeles. We specialize in Media buying, strategy, marketing campaigns"
		image="https://blupp.b-cdn.net/idearebel/About_Header_Widescreen-1-3840x2160.jpg?quality=80"
    />
	<body>
        <Header
            title="About"
            subtitle="We are an adaptive digital marketing agency creating provocative brand experiences."
            cover="https://blupp.b-cdn.net/idearebel/About_Header_Widescreen-1-3840x2160.jpg?quality=50"
			client:load
		/>
        <section class="conatiner mx-auto max-w-6xl py-20">
            <div class="flex justify-center flex-col items-center">
                <H3
                    text="Select Clients"
                />
            </div>
            <div class="flex justify-center flex-col items-center">
                <div class="grid grid-cols-2 md:grid-cols-5 items-center justify-center gap-4">
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/7eleven.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/arcteryx.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/bmw.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/converse.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/fox.png?quality=80"
                        >
                    </div>
                </div>
                <div class="grid grid-cols-2 md:grid-cols-5 items-center justify-center gap-4">
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/hyundi.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/keurig.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/rogers.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/quiksilver.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/westjet.png?quality=80"
                        >
                    </div>
                </div>
                <div class="grid grid-cols-3 items-center justify-center gap-4">
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/van_houtte.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/anheuser_busch.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/roots.png?quality=80"
                        >
                    </div>
                </div>
            </div>
        </section>
        <section class="container mx-auto max-w-6xl py-20">
            <div class="flex justify-center flex-col items-center">
                <H3
                    text="Select Awards"
                />
            </div>
            <div class="flex justify-center flex-col items-center">
                <div class="grid grid-cols-2 md:grid-cols-4 items-center justify-center gap-4 w-full">
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/lotus_award.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/atomic_award.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/fwa_award.png?quality=80"
                        >
                    </div>
                    <div class="flex items-center justify-center">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/digi_award.png?quality=80"
                        >
                    </div>
                </div>
            </div>
        </section>
        <section class="conatiner mx-auto max-w-6xl py-4 md:py-20 p-4 md:p-0">
            <div class="grid grid-cols-1 md:grid-cols-12">
                <div class="col-span-2" />
                <div class="col-span-8 relative">
                    <H2
                        text="We don't do paper."
                    />
                    <Paragraph
                        text="Being an environmentally sustainable company is at the core of our business model and part of our DNA, underpinning our actions and informing what we do. It’s why we walk, bike or bus to work, too."
                    />
                </div>
            </div>
		</section>
        <section class="conatiner mx-auto max-w-6xl py-4 md:py-20  p-4 md:p-0">
            <div class="grid grid-cols-1 md:grid-cols-12">
                <div class="col-span-2" />
                <div class="col-span-8">
                    <H2
                        text="Rebels"
                    />
                    <Paragraph
                        text="Rebels don’t follow. That’s why we’re continually challenging ourselves to create industry-leading excellence in everything we do, a mindset that starts with everyone on our team."
                    />
                </div>

            </div>
		</section>
        <section class="container mx-auto max-w-6xl py-20">
            <div class="grid grid-cols-1 md:grid-cols-3 p-4 md:p-0 gap-4 md:gap-10">
                <div class="col-span-1 md:col-span-2 bg-zinc-200">
                    <img
                        src="https://blupp.b-cdn.net/idearebel/mahira-idea-rebel.jpg?quality=80"
                        class="w-full h-full object-cover"
                        alt="picture"
                    />
                </div>
                <div class="grid gap-4 md:gap-10">
                    <div class="col-span-1 md:col-span-2 bg-zinc-200 w-full aspect-square">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/Neil-new.jpg?quality=80"
                            class="w-full h-full object-cover"
                            alt="picture"
                        />
                    </div>
                    <div class="col-span-1 md:col-span-2 bg-zinc-200 w-full aspect-square">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/jamie_garratt.jpg?quality=80"
                            class="w-full h-full object-cover"
                            alt="picture"
                        />
                    </div>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 p-4 md:p-0 gap-4 md:gap-10 mt-0 md:mt-10">
                <div class="grid gap-10">
                    <div class="col-span-1 md:col-span-2 bg-zinc-200 w-full aspect-square">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/Robbie.jpg?quality=80"
                            class="w-full h-full object-cover"
                            alt="picture"
                        />
                    </div>
                    <div class="col-span-1 md:col-span-2 bg-zinc-200 w-full aspect-square">
                        <img
                            src="https://blupp.b-cdn.net/idearebel/avr.jpg?quality=80"
                            class="w-full h-full object-cover"
                            alt="picture"
                        />
                    </div>
                </div>
                <div class="col-span-1 md:col-span-2 bg-zinc-200">
                    <img
                        src="https://blupp.b-cdn.net/idearebel/david_rossellat.jpg?quality=80"
                        class="w-full h-full object-cover bg-zinc-200"
                        alt="picture"
                    />
                </div>
            </div>
        </section>
        <Footer />
	</body>
</html>
